@using SSCasino;
@using SSCasino.Models;
@model ShufflerControlPanel

@Html.DevExpress().CallbackPanel(
    settings =>
    {
        // General Properties
        settings.Name = "cbp_ShufflerControlPanel";

        // Server side callbacks
        settings.CallbackRouteValues = new { Controller = "Home", Action = "ShufflerControlPanel_Reset" };

        // Clientside events
        settings.ClientSideEvents.BeginCallback = "cbp_ShufflerControlPanel_BeginCallback";
        settings.ClientSideEvents.EndCallback = "cbp_ShufflerControlPanel_EndCallback";

        // Content
        settings.SetContent(() =>
        {
            Html.RenderPartial("_Shuffler_ControlPanel", Model);
        });
    }
).GetHtml()

