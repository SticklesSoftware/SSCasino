    // _Shuffler_CardExamplesCBP.cshtml
    //      Callback panel for the card examples area in the shuffler control panel
    //========================================================================================================================
*@

@using SSCasino;
@using SSCasino.Models;
@model CardPack

@Html.DevExpress().CallbackPanel(
    settings =>
    {
        // General Properties
        settings.Name = "cbp_ShufflerCardExamples";

        // Server side callbacks
        settings.CallbackRouteValues = new { Controller = "Home", Action = "ShufflerControlPanel_ChangeCardPack" };

        // Clientside events
        settings.ClientSideEvents.BeginCallback = "cbp_ShufflerCardExamples_BeginCallback";
        settings.ClientSideEvents.EndCallback = "cbp_ShufflerCardExamples_EndCallback";

        // Content
        settings.SetContent(() =>
        {
            Html.RenderPartial("_Shuffler_CardExamples", Model);
        });
    }
).GetHtml()
