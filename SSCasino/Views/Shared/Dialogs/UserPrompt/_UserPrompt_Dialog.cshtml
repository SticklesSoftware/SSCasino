@using SSCasino;
@using SSCasino.Models;
@model UserPrompt

@Html.DevExpress().PopupControl(
    settings =>
    {
        // Make this popup act like a system dialog
        DevExpressHelpers.Popup_AsSystemDialog(settings, "dlgUserPrompt", "Common", "ShowUserPrompt", true, false, "Poker Playground", 500, 200);

        // Dialog content
        settings.SetContent(Html.Partial("_UserPrompt_Content", Model).ToHtmlString());
    }).GetHtml()


