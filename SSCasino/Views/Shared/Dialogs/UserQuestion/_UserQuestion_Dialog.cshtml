@using SSCasino;
@using SSCasino.Models;
@model UserQuestion

@Html.DevExpress().PopupControl(
    settings =>
    {
        // Make this popup act like a system dialog
        DevExpressHelpers.Popup_AsSystemDialog(settings, "dlgUserQuestion", "Common", "ShowUserQuestion", true, false, "Poker Playground", 500, 200);

        // Dialog content
        settings.SetContent(Html.Partial("_UserQuestion_Content", Model).ToHtmlString());
    }).GetHtml()


