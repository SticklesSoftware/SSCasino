    //      Renders the card display area on the card shuffler page.
    //========================================================================================================================
}

@using SSCasino;
@using SSCasino.Models;
@model List<PlayingCard>

@{
    int cardIndex = 0;
    for (int suitMultiplier = (int)SiteHelpers.CardSuits.Hearts; suitMultiplier <= (int)SiteHelpers.CardSuits.Spades; suitMultiplier++)
    {
        <div class="ssc_CardShuffler_CardsAreaRow">
            @for (int suitCount = 1; suitCount <= SiteHelpers.SuitCount; suitCount++)
            {
                <div class="ssc_CardShuffler_CardsAreaCell"><img class="ssc_CardShuffler_Card ssc_ResponsiveImage" src="@Url.Content(Model.ElementAt(cardIndex).ImagePath)" /></div>
                cardIndex++;
            }
        </div>
    }
}
