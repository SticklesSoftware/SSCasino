@using SSCasino;
@using SSCasino.Models;
@model List<PlayingCard>

@Html.DevExpress().CallbackPanel(
    settings =>
    {
        // Assign general and shared properties
        DevExpressHelpers.Render_CallbackPanel(settings, "cbp_CardShufflerDisplay", "Home", "CardShuffler_PerformAction", "", true, true);

        // Content
        settings.SetContent(() =>
        {
            Html.RenderPartial("_CardShuffler_Display", Model);
        });
    }
).GetHtml()
