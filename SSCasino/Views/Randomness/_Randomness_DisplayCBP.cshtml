    //      Callback panel for the card display area on the randomness comparison page.
    //========================================================================================================================
*@

@using SSCasino;
@using SSCasino.Models;
@model Randomness

@Html.DevExpress().CallbackPanel(
    settings =>
    {
        // General Settings
        settings.Name = "cbp_RandomnessCardDisplay";

        // Server side callbacks
        settings.CallbackRouteValues = new { Controller = "Home", Action = "Randomness_PerformAction" };

        // Client side events
        settings.ClientSideEvents.BeginCallback = "cbp_RandomnessCardDisplay_BeginCallback";
        settings.ClientSideEvents.EndCallback = "cbp_RandomnessCardDisplay_EndCallback";

        // Content
        settings.SetContent(() =>
        {
            Html.RenderPartial("_Randomness_Display", Model);
        });
    }
).GetHtml()
