}

@using SSCasino.Models;
@model Randomness

@section PageIncludes {
    <script src="@Url.Content("~/Scripts/Casino/Randomness.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Casino/Shuffle.js")" type="text/javascript"></script>
}

@{
    // Info and technology panel
    @Html.Partial("_InfoPanel", Model.InformationPanel);

    // The randomness comparison page is split into two areas...
    //      The left side displays the cards
    //      The right side displays the shuffler control panel
    <div class="ssc_CardAreaBox">
        <div id="div_CardArea" class="ssc_CardArea">@Html.Partial("_Randomness_DisplayCBP", Model)</div>
        <div class="ssc_ShufflerPanel">@Html.Partial("_Shuffler_ControlPanelCBP", Model.ControlPanel)</div>
    </div>
}
