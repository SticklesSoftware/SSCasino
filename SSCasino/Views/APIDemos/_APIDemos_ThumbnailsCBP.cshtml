@using SSCasino;
@using SSCasino.Models;
@model YouTubeAPI

@Html.DevExpress().CallbackPanel(
    settings =>
    {
        // General Settings
        settings.Name = "cbp_Thumbnails";

        // Server side callbacks
        settings.CallbackRouteValues = new { Controller = "Home", Action = "APIDemos_RefreshThumbnails" };

        // Client side events
        settings.ClientSideEvents.BeginCallback = "cbp_Thumbnails_BeginCallback";
        settings.ClientSideEvents.EndCallback = "cbp_Thumbnails_EndCallback";

        // Content
        settings.SetContent(() =>
        {
            Html.RenderPartial("_APIDemos_Thumbnails", Model);
        });
    }
).GetHtml()

