@using SSCasino;
@using SSCasino.Models;
@model YouTubeAPI

@Html.DevExpress().CallbackPanel(
    settings =>
    {
        // General Settings
        settings.Name = "cbp_VideoPlayer";

        // Server side callbacks
        settings.CallbackRouteValues = new { Controller = "Home", Action = "APIDemos_LoadNewVideo" };

        // Client side events
        settings.ClientSideEvents.BeginCallback = "cbp_VideoPlayer_BeginCallback";
        settings.ClientSideEvents.EndCallback = "cbp_VideoPlayer_EndCallback";

        // Content
        settings.SetContent(() =>
        {
            Html.RenderPartial("_APIDemos_VideoPlayer", Model);
        });
    }
).GetHtml()


